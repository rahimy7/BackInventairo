{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=InventarioDB;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "InventarioConnection": "Server=localhost;Database=InventarioDB;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "InnovacentroConnection": "Server=localhost;Database=INNOVACENTRO;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  
  "JwtSettings": {
    "SecretKey": "tu_clave_secreta_muy_segura_de_al_menos_32_caracteres_1234567890",
    "Issuer": "InventarioAPI",
    "Audience": "InventarioAPI_Users",
    "ExpirationHours": "8"
  },
  
  "Security": {
    "PasswordSalt": "tu_salt_personalizado_para_passwords_123456",
    "RequireHttps": false,
    "MaxLoginAttempts": 5,
    "LockoutTimeMinutes": 15
  },
  
  "Application": {
    "Name": "Sistema de Inventario",
    "Version": "1.0.0",
    "Environment": "Development",
    "SupportEmail": "soporte@empresa.com",
    "EnableDetailedErrors": true,
    "EnableSwagger": true
  },
  
  "Features": {
    "EnableUserManagement": true,
    "EnableAuditLogging": true,
    "EnableEmailNotifications": false,
    "EnableFileUploads": true,
    "MaxFileUploadMB": 10
  },
  
  "Cache": {
    "DefaultExpirationMinutes": 30,
    "UserCacheMinutes": 15,
    "ProductCacheMinutes": 60
  },
  
  "Pagination": {
    "DefaultPageSize": 20,
    "MaxPageSize": 100
  },
  
  "Email": {
    "SmtpServer": "smtp.empresa.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "FromEmail": "noreply@empresa.com",
    "FromName": "Sistema de Inventario",
    "Username": "tu_usuario_smtp",
    "Password": "tu_password_smtp"
  },
  
  "FileStorage": {
    "BasePath": "uploads",
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".pdf", ".xlsx", ".csv"],
    "MaxFileSizeMB": 10
  },
  
  "Business": {
    "DefaultStore": "001",
    "DefaultCurrency": "DOP",
    "DefaultTimeZone": "America/Santo_Domingo",
    "SupportedLanguages": ["es", "en"],
    "DefaultLanguage": "es"
  },
  
  "Monitoring": {
    "EnableHealthChecks": true,
    "EnableMetrics": true,
    "HealthCheckIntervalSeconds": 30
  },
  
  "Api": {
    "EnableCors": true,
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:4200"],
    "EnableRateLimiting": false,
    "RequestsPerMinute": 100
  }
}